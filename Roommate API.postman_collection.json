									"// Parse response JSON\r",
									"let responseData;\r",
									"try {\r",
									"    responseData = pm.response.json();\r",
									"} catch (e) {\r",
									"    console.error(\"Failed to parse JSON response:\", e);\r",
									"}\r",
									"\r",
									"// Check if token exists and set it to environment variable\r",
									"if (responseData && responseData.token) {\r",
